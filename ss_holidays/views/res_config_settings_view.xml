<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
            
        <record id="view_holidays_config_settings" model="ir.ui.view">
            <field name="name">view.holidays.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='general_settings']">
                    <h2>Holidays</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Holidays</span>
                                <div class="text-muted">
                                    Configure your holiday calendars
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <button name="%(ss_holidays.action_ss_holiday_calendar)d" string="Holiday Calendars" type="action" class="oe_link" icon="fa-arrow-right"/>
                                        <button name="%(ss_holidays.action_ss_holiday_type)d" string="Holiday Types" type="action" class="oe_link" icon="fa-arrow-right"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
			</field>
		</record>
		
	</data>
</odoo>