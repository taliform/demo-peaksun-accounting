<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Bank Loan Record Reference Number -->
		<record id="bank_loan_ref_number_data" model="ir.sequence">
			<field name="name">Bank Loan Record Number</field>
			<field name="code">bank.loan.ref</field>
			<field name="prefix">BL-</field>
			<field name="padding">3</field>
			<field name="implementation">no_gap</field>
			<field name="company_id" eval="False" />
		</record>

		<!-- Bank Loan Schedule Line Record Reference Number -->
		<record id="bank_loan_line_ref_number_data" model="ir.sequence">
			<field name="name">Bank Loan Schedule Line Record Number</field>
			<field name="code">bank.loan.line.ref</field>
			<field name="prefix">BLSP-</field>
			<field name="padding">3</field>
			<field name="implementation">no_gap</field>
			<field name="company_id" eval="False" />
		</record>

    </data>
</odoo>
