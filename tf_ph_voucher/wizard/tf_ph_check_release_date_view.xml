<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    
		<record id="tf_ph_check_payment_date_view" model="ir.ui.view">
			<field name="name">tf.ph.check.payment.date.view</field>
          	<field name="model">check.payment.date</field>
          	<field name="arch" type="xml">
            	<form string="Check Payment Date">
                	This will set the Payment Date for a Check of the current Vendor Payment record.
              	<separator/>
              	<group>
                	<field name="payment_date" required="1"/>
              	</group>
              	<footer>
                	<button name="apply" string="Apply" type="object" class="oe_highlight"/>
                	<button string="Cancel" class="oe_link" special="cancel"/>
              	</footer>
            	</form>
          	</field>
        </record>
        
    </data>
</odoo>