<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="inherit_view_account_config_settings_"
			model="ir.ui.view">
			<field name="name">inherit.view.account.config.settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id"
				ref="account.res_config_settings_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//div[@data-key='account']">
						<h2>Voucher Printout</h2>
						<div class="row mt16 o_settings_container">
							<div class="col-12 col-lg-6 o_setting_box" id="default_user">
	                            <div class="o_setting_right_pane">
	                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
	                                <div class="text-muted">
	                                    Default users for voucher printout.
	                                </div>
	                                <div class="content-group">
	                                    <div class="row mt16">
	                                        <label string="Certified By" for="certified_by_id" class="col-lg-3 o_light_label"/>
	                                        <field name="certified_by_id" />
	                                    </div>
	                                   <div class="row mt16">
	                                        <label string="Noted By" for="noted_by_id" class="col-lg-3 o_light_label"/>
	                                        <field name="noted_by_id" />
	                                    </div>
	                                 
	                                </div>
	                            </div>
	                        </div>
				
						</div>
					</xpath>
			</field>
		</record>

	</data>
</odoo>
