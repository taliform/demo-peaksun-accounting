<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="tf_peec_credit_line_management" model="ir.ui.view">
            <field name="name">tf.peec.credit.line.management</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']/div[4]/div[8]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Authorized Signatories</span>
                            <div class="text-muted">
                                <field name="authorized_signatories"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>