        <record id="tyrecheck_deferred_expense_view_search" model="ir.ui.view">
            <field name="name">tyrecheck.deferred.expense.view.search</field>
            <field name="model">tyrecheck.deferred.expense</field>
            <field name="arch" type="xml">
                <search string="Search Tire Deferred Expenses">
                    <filter string="Unposted" name="unposted" domain="[('posted', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="tyrecheck_deferred_expense_view_tree" model="ir.ui.view">
            <field name="name">tyrecheck.deferred.expense.view.tree</field>
            <field name="model">tyrecheck.deferred.expense</field>
            <field name="arch" type="xml">
                <tree editable="bottom" decoration-muted="posted == True">
                    <field name="tyrecheck_vehicle_id"/>
                    <field name="create_date"/>
                    <field name="amount" required="1"/>
                    <field name="posted"/>
                    <field name="cost_id" optional="show"/>
                    <field name="move_id" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="action_tyrecheck_deferred_expense" model="ir.actions.act_window">
            <field name="name">Deferred Expenses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tyrecheck.deferred.expense</field>
            <field name="view_mode">tree</field>
            <field name="context">{'search_default_unposted': True}</field>
            <field name="domain">[]</field>
        </record>

        <record id="model_tyrecheck_deferred_expense_action_post" model="ir.actions.server">
            <field name="name">Post Expense</field>
