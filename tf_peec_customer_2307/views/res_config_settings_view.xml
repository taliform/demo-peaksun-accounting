<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
            
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.reconcile.2307</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']">
                	<h2>Reconcile (2307)</h2>
                    <div class="row mt16 o_settings_container" id="reconcile_2307">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="reconcile_2307_journal_id"/>
                                <div class="text-muted">
                                    The journal to use for Reconcile (2307).
                                </div>
                                <field name="reconcile_2307_journal_id"/>
                            </div>
                        </div>
                    </div>
                </xpath>
			</field>
		</record>

	</data>
</odoo>