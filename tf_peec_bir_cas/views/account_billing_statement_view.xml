<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_billing_statement_view_form" model="ir.ui.view">
            <field name="name">account.billing.statement.view.form</field>
            <field name="model">account.billing.statement</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="invoice_id"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="billing_statement" widget="binary" readonly="1"/>
                                <field name="hash_code" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_generated" readonly="1"/>
                                <field name="generated_by" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
